    {
        if (moo_app_send_files (app, files, line, stamp, pid_string))
            exit (0);

        g_print ("Could not send files to pid %s\n", pid_string);
        exit (1);
    }

    if ((!new_instance && moo_app_send_files (app, files, line, stamp, NULL)) ||
         !moo_app_init (app))
    {
        gdk_notify_startup_complete ();
        g_strfreev (files);
        g_object_unref (app);
        return 0;
    }

