#include "mooui/moouiobject.h"
#include "mooedit/mooeditor.h"
#include "mooedit/mooplugin.h"
#include "mooedit/plugins/mooeditplugins.h"
#include "mooedit/moopaneview.h"
#include "mooutils/mooprefsdialog.h"
#include "editor-ui.h"


static void init_actions (void);
static void ref_stuff (void);

int main (int argc, char **argv)
{
    char *rcfile, *plugin_dir;
    MooEditor *editor;
    MooEditLangMgr *mgr;
    MooEditWindow *win;
    MooUIXML *xml;

    gtk_init (&argc, &argv);

    rcfile = g_build_filename (g_get_home_dir (), ".meditrc", NULL);
    moo_prefs_load (rcfile, NULL);

    init_actions ();
    if (argc > 1000)
        ref_stuff ();

    plugin_dir = g_build_filename (g_get_home_dir (), ".medit", "plugins", NULL);
    moo_plugin_read_dir ("@MOO_PLUGINS_DIR@");
    moo_plugin_read_dir (plugin_dir);
    g_free (plugin_dir);

    moo_find_init ();
    moo_file_selector_init ();

    editor = moo_editor_new ();
    mgr = moo_editor_get_lang_mgr (editor);
    moo_edit_lang_mgr_add_lang_files_dir (mgr, "@MOO_EDIT_LANG_FILES_DIR@");

    g_signal_connect (editor, "all-windows-closed", G_CALLBACK (gtk_main_quit), NULL);

    xml = moo_editor_get_ui_xml (editor);
    moo_ui_xml_add_ui_from_string (xml, MEDIT_UI, -1);

    win = moo_editor_new_window (editor);

    if (argc > 1)
        moo_editor_open_file (editor, win, NULL,
                              argv[1], NULL);

    gtk_main ();

    moo_prefs_save (rcfile, NULL);

    g_object_unref (editor);
    g_free (rcfile);

    return 0;
}


static void show_preferences (MooEditWindow *window)
{
    GtkWidget *dialog = moo_prefs_dialog_new ("Preferences");
    moo_prefs_dialog_run (MOO_PREFS_DIALOG (dialog), GTK_WIDGET (window));
}


static void quit (MooEditWindow *window)
{
    moo_editor_close_all (moo_edit_window_get_editor (window));
}

static void about (void)
{
}


static void init_actions (void)
{
    GObjectClass *klass = g_type_class_ref (MOO_TYPE_EDIT_WINDOW);

    g_return_if_fail (klass != NULL);

    moo_ui_object_class_new_action (klass, "Preferences",
                                    "name", "Preferences",
                                    "label", "Preferences",
                                    "tooltip", "Preferences",
                                    "icon-stock-id", GTK_STOCK_PREFERENCES,
                                    "closure::callback", show_preferences,
                                    NULL);
    moo_ui_object_class_new_action (klass, "Quit",
                                    "name", "Quit",
                                    "label", "_Quit",
                                    "tooltip", "Quit",
                                    "icon-stock-id", GTK_STOCK_QUIT,
                                    "closure::callback", quit,
                                    NULL);
    moo_ui_object_class_new_action (klass, "About",
                                    "name", "About",
                                    "label", "About",
                                    "tooltip", "About",
                                    "icon-stock-id", GTK_STOCK_ABOUT,
                                    "closure::callback", about,
                                    NULL);

    g_type_class_unref (klass);
}


static void ref_stuff (void)
{
    moo_pane_view_new ();
    moo_markup_create_file_element (NULL, NULL, NULL);
}
