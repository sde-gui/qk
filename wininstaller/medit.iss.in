[Setup]
AppName=medit
AppVerName=medit @MOO_VERSION_UNQUOTED@
AppPublisher=Yevgen Muntyan
AppPublisherURL=http://mooedit.sourceforge.net/
AppSupportURL=http://mooedit.sourceforge.net/
AppUpdatesURL=http://mooedit.sourceforge.net/
DefaultDirName={pf}\medit
DefaultGroupName=medit
AllowNoIcons=yes
; LicenseFile=C:\ggap\license.txt
Compression=lzma
SolidCompression=yes

[Tasks]
Name: desktopicon; Description: {cm:CreateDesktopIcon}; GroupDescription: {cm:AdditionalIcons}; Flags: unchecked
Name: quicklaunchicon; Description: {cm:CreateQuickLaunchIcon}; GroupDescription: {cm:AdditionalIcons}; Flags: unchecked

[Files]
Source: C:\medit\*; DestDir: {app}; Flags: ignoreversion recursesubdirs
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[Icons]
Name: {group}\medit; Filename: {app}\bin\medit.exe
Name: {group}\{cm:UninstallProgram,medit}; Filename: {uninstallexe}
Name: {userdesktop}\medit; Filename: {app}\bin\medit.exe; Tasks: desktopicon
Name: {userappdata}\Microsoft\Internet Explorer\Quick Launch\medit; Filename: {app}\bin\medit.exe; Tasks: quicklaunchicon

[Run]
Filename: {app}\bin\medit.exe; Description: {cm:LaunchProgram,medit}; Flags: nowait postinstall skipifsilent
[UninstallDelete]
Name: {app}\lib\moo\plugins\*.pyc; Type: files; Tasks:
Name: {app}\lib\moo\plugins\lib\*.pyc; Type: files; Tasks:

